@{
    ViewData["Title"] = "Home";
}
<br/>
<div id="page-container">
    <div class="panel panel-default" id="upload-container">
        <div class="panel-heading">
            <strong>File Uploader</strong>
            <div class="pull-right">
                <button class="btn btn-default" id="btn-browse-folders"><span class="glyphicon glyphicon-folder-open"></span> Select Folder</button>
                <button class="btn btn-default" id="btn-browse-files"><span class="glyphicon glyphicon-file"></span> Select Files</button>
                <button class="btn btn-default" id="btn-browse-images"><span class="glyphicon glyphicon-picture"></span> Select Images</button>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body panel-content" id="uploader-stage">
            <div rv-if="notSupported" class="alert alert-danger" role="alert">Flow.js is not supported on this browser. Please try another modern browser.</div>

            <ul class="list-group">
                <li rv-each-file="files" class="list-group-item">
                    <span class="badge">{file.displaySize}</span>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" rv-aria-valuenow="file.percentUploaded" aria-valuemin="0" aria-valuemax="100" rv-style="file.percentUploaded | width">
                            <span class="pull-left">{file.name}</span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="panel-footer">
            <div class="pull-right">
                <button class="btn btn-default"><span class="glyphicon glyphicon-pause"></span> Pause Upload</button>
                <button class="btn btn-default"><span class="glyphicon glyphicon-remove-sign"></span> Cancel Upload</button>
                @*<button class="btn btn-primary"><span class="glyphicon glyphicon-open-file"></span> Upload Files</button>*@
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="panel panel-default" id="upload-container">
        <div class="panel-heading">
            <strong>Uploaded Files</strong>
        </div>
        <div class="panel-body panel-content" id="uploader-stage">
            <table class="table table-striped table-condensed">
                <tbody>
                    <tr rv-each-file="uploadedFiles" rv-class="file.selected | bootstrapSuccess">
                        <td><input type="checkbox" rv-checked="file.selected"/></td>
                        <td>{file.name}</td>
                        <td>{file.displaySize}</td>
                        <td>{file.createdDateUtc | timeAgo}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <button class="btn btn-default pull-right"><span class="glyphicon glyphicon-save-file"></span> Download</button>
            <div class="clearfix"></div>
        </div>
    </div>
</div>